<div class="breadcrumb">
  <span style="font-weight: bolder">Lista de Salas</span>
  <span class="btnAdd"><%= link_to 'New Room', new_room_path %></span>
</div>

<table width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Cinema</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.cinema.name %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


